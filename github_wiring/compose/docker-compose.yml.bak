version: "3.9"

services:
  postgres:
    image: postgres:15
    restart: unless-stopped
    environment:
      POSTGRES_USER: n8n
      POSTGRES_PASSWORD: n8n
      POSTGRES_DB: n8n
    volumes:
      - n8n_db:/var/lib/postgresql/data
    ports:
      - "5432:5432"

  n8n:
    image: n8nio/n8n:1.79.3
    restart: unless-stopped
    ports:
      - "5678:5678"
    environment:
      N8N_HOST: ${N8N_HOST:-localhost}
      N8N_PROTOCOL: http
      N8N_PORT: 5678
      DB_TYPE: postgresdb
      DB_POSTGRESDB_HOST: postgres
      DB_POSTGRESDB_PORT: 5432
      DB_POSTGRESDB_DATABASE: n8n
      DB_POSTGRESDB_USER: n8n
      DB_POSTGRESDB_PASSWORD: n8n
      # Optional auth
      N8N_BASIC_AUTH_ACTIVE: ${N8N_BASIC_AUTH_ACTIVE:-true}
      N8N_BASIC_AUTH_USER: ${N8N_BASIC_AUTH_USER:-kyrios}
      N8N_BASIC_AUTH_PASSWORD: ${N8N_BASIC_AUTH_PASSWORD:-changeme}
    volumes:
      - n8n_data:/home/node/.n8n
    depends_on:
      - postgres

  planner:
    image: ghcr.io/troymork/solvency-agent:latest
    environment:
      ROLE: planner
    ports: [ "8101:8080" ]

  producer:
    image: ghcr.io/troymork/solvency-agent:latest
    environment:
      ROLE: producer
    ports: [ "8102:8080" ]

  design:
    image: ghcr.io/troymork/solvency-agent:latest
    environment:
      ROLE: design
    ports: [ "8103:8080" ]

  social:
    image: ghcr.io/troymork/solvency-agent:latest
    environment:
      ROLE: social
    ports: [ "8104:8080" ]

  analytics:
    image: ghcr.io/troymork/solvency-agent:latest
    environment:
      ROLE: analytics
    ports: [ "8105:8080" ]

  cert:
    image: ghcr.io/troymork/solvency-agent:latest
    environment:
      ROLE: cert
    ports: [ "8106:8080" ]

volumes:
  n8n_data:
  n8n_db:
